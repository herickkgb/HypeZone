<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".ui.userauth.login.UserLoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/infestlogo"
            />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bd_edit"
            android:drawableStart="@drawable/ic_mail_line"
            android:drawablePadding="8dp"
            android:hint="Email"
            android:padding="14dp"
            android:textColorHint="@color/laranja_1000"
            app:drawableTint="@color/laranja_1000"
           />

        <EditText
            android:id="@+id/edit_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bd_edit"
            android:drawableStart="@drawable/ic_lock_password_line"
            android:drawablePadding="8dp"
            android:hint="Senha"
            android:padding="14dp"
            android:textColorHint="@color/laranja_1000"
            app:drawableTint="@color/laranja_1000"
           />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bt_login"
            android:text="Login"
            android:textColor="@color/laranja_1000"
            app:backgroundTint="@null"
           />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/btn_criar_conta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Criar conta"
                android:textColor="@color/laranja_1000" />

            <TextView
                android:id="@+id/btn_recuperar_conta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Recuperar conta"
                android:textColor="@color/laranja_1000" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#f48615"
            android:padding="24dp"
           />

    </LinearLayout>
</ScrollView>
